@page
@using Microsoft.AspNetCore.Authorization
@model WebApp.Pages.AdminPages.ClientesModel
@attribute [Authorize(Roles = "Admin")]

@section Scripts {
    <script>
        // Captura el token JWT desde la cookie
        var userToken = '@HttpContext.Request.Cookies["jwt_token"]';
    </script>
    <script src="~/js/pages/clientes.js"></script>
}

<div class="text-end">
    <a asp-page="/AdminPages/AdminHome" class="btn btn-outline-dark">⬅️ Volver</a>
</div>

<div class="bs-docs-section">
    <div class="row">
        <div class="col-sm-12 align-self-sm-stretch">
            <div class="card">
                <div class="card-header bg-success text-white">
                    👤 Clientes
                </div>
                <div class="card-body" style="overflow-x: auto; width: 100%;">
                    <table id="tblcliente"
                           class="table table-striped table-bordered"
                           style="min-width: 600px; width: 100%;">
                        <thead class="thead-dark">
                            <tr>
                                <th>ID</th>
                                <th>Nombre</th>
                                <th>Apellidos</th>
                                <th>Cédula</th>
                                <th>Correo Electrónico</th>
                                <th>Dirección</th>
                                <th>Fecha de Nacimiento</th>
                                <th>Teléfono</th>
                                <th>IBAN</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
