@page
@using Microsoft.AspNetCore.Authorization
@model WebApp.Pages.AdminPages.PromocionesModel
@attribute [Authorize(Roles = "Admin")]

@section Scripts {
    <script>
        // Captura el token JWT desde la cookie
        var userToken = '@HttpContext.Request.Cookies["jwt_token"]';
    </script>
    <script src="~/js/pages/promociones.js"></script>
}

<legend>Promociones</legend>

<div class="text-end">
    <a asp-page="/AdminPages/AdminHome" class="btn btn-outline-dark">⬅️ Volver</a>
</div>

<div class="row mt-3">
    <!-- Promociones de Bancos -->
    <div class="col-lg-6 mb-4">
        <div class="card">
            <div class="card-header bg-success text-white">
                🔖 Promociones Bancarias
            </div>
            <div class="card-body">
                <table id="tblPromoBancos" class="table table-bordered table-hover">
                    <thead class="thead-dark">
                        <tr>
                            <th>ID</th>
                            <th>Banco</th>
                            <th>Descripción</th>
                            <th>Descuento</th>
                            <th>Vigencia</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>

    <!-- Promociones de Comercios -->
    <div class="col-lg-6 mb-4">
        <div class="card">
            <div class="card-header bg-success text-white">
                🔖 Promociones Comercios
            </div>
            <div class="card-body">
                <table id="tblPromoComercios" class="table table-bordered table-hover">
                    <thead class="thead-dark">
                        <tr>
                            <th>ID</th>
                            <th>Comercio</th>
                            <th>Descripción</th>
                            <th>Descuento</th>
                            <th>Vigencia</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <!-- Formulario Promoción Bancaria -->
    <div class="col-lg-6">
        <fieldset class="border p-3 mb-4">
            <legend class="w-auto">Formulario Promoción Bancaria</legend>
            <form>
                <div class="form-group mb-2">
                    <label for="txtIdBancoPromo">ID Promoción</label>
                    <input id="txtIdBancoPromo" name="Id" readonly type="number" class="form-control" />
                </div>
                <div class="form-group mb-2">
                    <label for="txtBanco">Banco</label>
                    <select id="txtBanco" name="BancoId" class="form-control">
                        <option value="">-- Seleccione un banco --</option>
                    </select>
                </div>
                <div class="form-group mb-2">
                    <label for="txtDescripcionBanco">Descripción</label>
                    <textarea id="txtDescripcionBanco" name="Descripcion" class="form-control" rows="3"></textarea>
                </div>
                <div class="form-group mb-2">
                    <label for="txtDescuentoBanco">Descuento (%)</label>
                    <input id="txtDescuentoBanco" name="Descuento" type="number" step="0.01" class="form-control" />
                </div>
                <div class="form-group mb-2">
                    <label for="txtVigenciaBanco">Vigencia</label>
                    <input id="txtVigenciaBanco" name="Vigencia" type="date" class="form-control" />
                </div>
                <button id="btnCreatePromoBanco" class="btn btn-primary btn-xs me-2">Crear</button>
                <button id="btnUpdatePromoBanco" class="btn btn-info btn-xs me-2" type="button">Actualizar</button>
                <button id="btnDeletePromoBanco" class="btn btn-danger btn-xs" type="button">Eliminar</button>
            </form>
        </fieldset>
    </div>

    <!-- Formulario Promoción Comercio -->
    <div class="col-lg-6">
        <fieldset class="border p-3 mb-4">
            <legend class="w-auto">Formulario Promoción Comercio</legend>
            <form>
                <div class="form-group mb-2">
                    <label for="txtIdComercioPromo">ID Promoción</label>
                    <input id="txtIdComercioPromo" name="Id" readonly type="number" class="form-control" />
                </div>
                <div class="form-group mb-2">
                    <label for="txtComercio">Comercio</label>
                    <select id="txtComercio" name="ComercioId" class="form-control">
                        <option value="">-- Seleccione un comercio --</option>
                    </select>
                </div>
                <div class="form-group mb-2">
                    <label for="txtDescripcionComercio">Descripción</label>
                    <textarea id="txtDescripcionComercio" name="Descripcion" class="form-control" rows="3"></textarea>
                </div>
                <div class="form-group mb-2">
                    <label for="txtDescuentoComercio">Descuento (%)</label>
                    <input id="txtDescuentoComercio" name="Descuento" type="number" step="0.01" class="form-control" />
                </div>
                <div class="form-group mb-2">
                    <label for="txtVigenciaComercio">Vigencia</label>
                    <input id="txtVigenciaComercio" name="Vigencia" type="date" class="form-control" />
                </div>
                <button id="btnCreatePromoComercio" class="btn btn-primary btn-xs me-2">Crear</button>
                <button id="btnUpdatePromoComercio" class="btn btn-info btn-xs me-2" type="button">Actualizar</button>
                <button id="btnDeletePromoComercio" class="btn btn-danger btn-xs" type="button">Eliminar</button>
            </form>
        </fieldset>
    </div>
</div>
