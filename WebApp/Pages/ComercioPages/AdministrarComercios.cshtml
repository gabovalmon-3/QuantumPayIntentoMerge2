@page
@using Microsoft.AspNetCore.Authorization
@model WebApp.Pages.ComercioPages.AdministrarComerciosModel
@attribute [Authorize(Roles = "CuentaComercio")]

@section Scripts {
    <script>
        // Captura el JWT desde la cookie
        var userToken = '@HttpContext.Request.Cookies["jwt_token"]';
    </script>
    <script src="~/js/pages/cuentacomercio.js"></script>
}

<div class="text-end mb-3">
    <a asp-page="/ComercioPages/ComercioHome" class="btn btn-outline-dark">⬅️ Volver</a>
</div>

<div class="col-lg-12 mb-4">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header bg-success text-white">
                Administrar Comercio
            </div>
            <div class="card-body p-0" style="overflow-x: auto; width: 100%;">
                <table id="tblComercios"
                       class="table table-striped table-bordered"
                       style="min-width: 600px; width: 100%;">
                    <thead>
                        <tr>
                            <th>ID Cuenta</th>
                            <th>Nombre Usuario</th>
                            <th>Cédula Jurídica</th>
                            <th>Teléfono</th>
                            <th>Correo Electrónico</th>
                            <th>Dirección</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-6">
        <form>
            <div class="row mb-3">
                <div class="col-lg-4">
                    <label for="txtSearchComercioId" class="form-label">Buscar por Comercio ID</label>
                    <div class="input-group">
                        <input id="txtSearchComercioId" type="number" class="form-control" />
                        <button id="btnSearch" class="btn btn-secondary btn-xs" type="button">Buscar</button>
                    </div>
                </div>
            </div>
            <fieldset class="border p-3">
                <legend class="w-auto">Administrar Cuenta de Comercio</legend>
                <div class="form-group mb-2">
                    <label for="txtIdCuenta" class="form-label">Cuenta</label>
                    <input id="txtIdCuenta" type="number" class="form-control" readonly />
                </div>
                <div class="form-group mb-2">
                    <label for="txtNombreUsuario" class="form-label">Nombre Usuario</label>
                    <input id="txtNombreUsuario" type="text" class="form-control" />
                </div>
                <div class="form-group mb-2">
                    <label for="txtContrasena" class="form-label">Contraseña</label>
                    <input id="txtContrasena" type="password" class="form-control" />
                </div>
                <div class="form-group mb-2">
                    <label for="txtCedulaJuridica" class="form-label">Cédula Jurídica</label>
                    <input id="txtCedulaJuridica" type="text" class="form-control" />
                </div>
                <div class="form-group mb-2">
                    <label for="txtTelefono" class="form-label">Teléfono</label>
                    <input id="txtTelefono" type="number" class="form-control" />
                </div>
                <div class="form-group mb-2">
                    <label for="txtCorreoElectronico" class="form-label">Correo Electrónico</label>
                    <input id="txtCorreoElectronico" type="email" class="form-control" />
                </div>
                <div class="form-group mb-2">
                    <label for="txtDireccion" class="form-label">Dirección</label>
                    <input id="txtDireccion" type="text" class="form-control" />
                </div>
                <div class="mt-3">
                    <button id="btnCreate" class="btn btn-primary btn-xs me-2" type="button">Save</button>
                    <button id="btnUpdate" class="btn btn-info btn-xs me-2" type="button">Update</button>
                    <button id="btnDelete" class="btn btn-danger btn-xs" type="button">Delete</button>
                </div>
            </fieldset>
        </form>
    </div>
</div>
