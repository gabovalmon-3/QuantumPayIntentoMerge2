@page
@using Microsoft.AspNetCore.Authorization
@model WebApp.Pages.ComercioPages.TransaccionesModel
@attribute [Authorize(Roles = "CuentaComercio")]

@section Scripts {
    <script>
        // Captura el JWT desde la cookie
        var userToken = '@HttpContext.Request.Cookies["jwt_token"]';
    </script>
    <script src="~/js/pages/transacciones.js"></script>
}

<div class="text-end mb-3">
    <a asp-page="/ComercioPages/ComercioHome" class="btn btn-outline-dark">⬅️ Volver</a>
</div>

<div class="col-lg-12">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header bg-success text-white">
                Transacciones
            </div>
            <div class="card-body" style="overflow-x: auto; width: 100%;">
                <table id="tblTransacciones"
                       class="table table-striped table-bordered"
                       style="min-width: 600px; width: 100%;">
                    <thead>
                        <tr>
                            <th>ID Transacción</th>
                            <th>Cliente</th>
                            <th>Monto</th>
                            <th>Fecha</th>
                            <th>Estado</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
</div>
