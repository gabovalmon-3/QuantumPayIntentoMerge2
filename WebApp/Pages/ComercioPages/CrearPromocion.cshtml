@page
@using Microsoft.AspNetCore.Authorization
@model WebApp.Pages.ComercioPages.CrearPromocionModel
@attribute [Authorize(Roles = "CuentaComercio")]

@section Scripts {
    <script>
        // Captura el JWT desde la cookie
        var userToken = '@HttpContext.Request.Cookies["jwt_token"]';
    </script>
    <script src="~/js/pages/cuentacomercio.js"></script>
}

<div class="text-end mb-3">
    <a asp-page="/ComercioPages/ComercioHome" class="btn btn-outline-dark">⬅️ Volver</a>
</div>

<div class="row mb-4">
    <div class="col-sm-12">
        <div class="card">
            <div class="card-header bg-success text-white">
                🔖 Crear Promoción
            </div>
            <div class="card-body p-0">
                <table id="tblCrearPromocion"
                       class="table table-striped table-bordered"
                       style="min-width: 600px; width: 100%;">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Comercio</th>
                            <th>Descripción</th>
                            <th>Descuento</th>
                            <th>Vigencia</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<legend>Formulario Promoción</legend>
<div class="row">
    <div class="col-lg-6">
        <form method="post">
            <fieldset class="border p-3">
                <div class="form-group mb-2">
                    <label for="txtId">ID Promoción</label>
                    <input id="txtId" name="Id" readonly type="number" class="form-control" />
                </div>
                <div class="form-group mb-2">
                    <label for="txtComercio">Comercio</label>
                    <select id="txtComercio" name="ComercioID" class="form-control">
                        <option value="">-- Seleccione un comercio --</option>
                    </select>
                </div>
                <div class="form-group mb-2">
                    <label for="txtDescripcion">Descripción</label>
                    <textarea id="txtDescripcion" name="Descripcion" class="form-control" rows="3"></textarea>
                </div>
                <div class="form-group mb-2">
                    <label for="txtDescuento">Descuento (%)</label>
                    <input id="txtDescuento" name="Descuento" type="number" step="0.01" class="form-control" />
                </div>
                <div class="form-group mb-2">
                    <label for="txtVigencia">Vigencia</label>
                    <input id="txtVigencia" name="Vigencia" type="date" class="form-control" />
                </div>

                <div class="mt-3">
                    <button id="btnCreatePromo" class="btn btn-primary btn-xs me-2" type="submit">Crear</button>
                    <button id="btnUpdatePromo" class="btn btn-info btn-xs me-2" type="button">Actualizar</button>
                    <button id="btnDeletePromo" class="btn btn-danger btn-xs" type="button">Eliminar</button>
                </div>
            </fieldset>
        </form>
    </div>
</div>
