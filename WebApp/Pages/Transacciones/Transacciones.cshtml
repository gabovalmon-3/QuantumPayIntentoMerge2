@page
@model WebApp.Pages.Transacciones.TransaccionesModel
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Roles = "Cliente")]

@{
    ViewData["Title"] = "Gestión de Transacciones";
}

@section Scripts {
    <script>
        // Captura el JWT desde la cookie
        var userToken = '@HttpContext.Request.Cookies["jwt_token"]';
    </script>
    <script src="~/js/ControlActions.js"></script>
    <script src="~/js/pages/Transacciones.js" asp-append-version="true"></script>
}

<a asp-page="/ComercioPages/ComercioHome" class="btn btn-outline-dark mb-3">⬅️ Volver</a>

<input type="hidden" id="hdnClienteId" value="@Model.ClienteId" />
<input type="hidden" id="hdnEmail" value="@Model.Email" />

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>

    <div class="form-inline mb-3">
        <label for="transaccionFiltro" class="mr-2">Mostrar:</label>
        <select id="transaccionFiltro" class="form-control mr-2">
            <option value="all">Todas</option>
            <option value="banco">Por Banco (IBAN)</option>
            <option value="comercio">Por Comercio (ID)</option>
        </select>

        <input type="text"
               id="filtroValor"
               class="form-control mr-2"
               placeholder="IBAN o ID de Comercio" />

        <button id="btnBuscar" class="btn btn-primary">Buscar</button>
    </div>

    <div class="col-lg-12 mb-4">
        <div class="card">
            <div class="card-header bg-success text-white">
                Transacciones
            </div>
            <div class="card-body p-0" style="overflow-x: auto; width:100%;">
                <table id="tblTransacciones"
                       class="table table-striped table-bordered"
                       style="min-width:600px; width:100%;">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Cuenta Bancaria</th>
                            <th>Cuenta Comercio</th>
                            <th>Monto</th>
                            <th>Comisión</th>
                            <th>Descuento</th>
                            <th>Fecha</th>
                            <th>Método Pago</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Formulario de CRUD -->
    <div class="row mt-4">
        <div class="col-lg-6">
            <fieldset class="border p-3">
                <legend class="w-auto">Formulario Transacción</legend>

                <div class="form-group mb-2">
                    <label for="txtId">ID</label>
                    <input id="txtId" readonly type="number" class="form-control" />
                </div>
                <div class="form-group mb-2">
                    <label for="txtIdCuentaBancaria">Cuenta Bancaria</label>
                    <input id="txtIdCuentaBancaria" type="number" class="form-control" />
                    <input id="IBAN" name="IBAN" type="hidden" />
                </div>
                <div class="form-group mb-2">
                    <label for="txtIdCuentaComercio">Cuenta Comercio</label>
                    <input id="txtIdCuentaComercio" type="number" class="form-control" />
                </div>
                <div class="form-group mb-2">
                    <label for="txtMonto">Monto</label>
                    <input id="txtMonto" type="number" step="0.01" class="form-control" />
                </div>
                <div class="form-group mb-2">
                    <label for="txtComision">Comisión</label>
                    <input id="txtComision" type="number" step="0.01" class="form-control" />
                </div>
                <div class="form-group mb-2">
                    <label for="txtDescuentoAplicado">Descuento Aplicado</label>
                    <input id="txtDescuentoAplicado" type="number" step="0.01" class="form-control" />
                </div>
                <div class="form-group mb-2">
                    <label for="txtFecha">Fecha</label>
                    <input id="txtFecha" type="datetime-local" class="form-control" />
                </div>
                <div class="form-group mb-2">
                    <label for="txtMetodoPago">Método Pago</label>
                    <input id="txtMetodoPago" type="text" class="form-control" />
                </div>
                <div class="form-group mb-2">
                    <label for="txtEmail">Correo</label>
                    <input id="txtEmail" type="email" value="@Model.Email" class="form-control" readonly />
                </div>

                <div class="mt-3">
                    <button id="btnCreate" class="btn btn-primary btn-xs me-2">Save</button>
                    <button id="btnUpdate" class="btn btn-info btn-xs">Update</button>
                </div>
            </fieldset>
        </div>
    </div>
</div>

<script>
    // Sincroniza IBAN e email ocultos
    document.addEventListener("DOMContentLoaded", () => {
        const txtIban = document.getElementById("txtIdCuentaBancaria");
        const hiddenIban = document.getElementById("IBAN");
        const emailInput = document.getElementById("txtEmail");
        const hdnEmail   = document.getElementById("hdnEmail");

        txtIban.onchange = () => hiddenIban.value = txtIban.value;
        if (hdnEmail && emailInput) emailInput.value = hdnEmail.value;
    });
</script>
