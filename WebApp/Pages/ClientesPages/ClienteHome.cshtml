@page
@using Microsoft.AspNetCore.Authorization
@model WebApp.Pages.Clientes.ClienteHomeModel
@{
}
@attribute [Authorize(Roles = "Cliente")]
<h2 class="mb-4">Bienvenido, Cliente</h2>

<!-- Sección: Cuentas del Usuario -->
<div class="row">
    <div class="col-sm-6">
        <div class="card">
            <div class="card-header bg-success text-white">
                💳 Cuentas Asociadas
            </div>
            <div class="card-body">
                <table class="table table-bordered table-sm">
                    <thead class="table-light">
                        <tr>
                            <th>Banco</th>
                            <th>Tipo de Cuenta</th>
                            <th>Número IBAN</th>
                            <th>Saldo</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!--Implementar traer desde base de datos cuentas registradas por el usuario-->
                        <tr>
                            <td>BAC San José</td>
                            <td>Ahorros</td>
                            <td>CR12000123456789123456</td>
                            <td>₡250,000</td>
                        </tr>
                        <tr>
                            <td>Banco Nacional</td>
                            <td>Corriente</td>
                            <td>CR05000123456789012345</td>
                            <td>₡75,500</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Sección: Últimas Transacciones -->
    <!-- Implementar traer de base de datos por el id del cliente -->
    <div class="col-sm-6">
        <div class="card">
            <div class="card-header bg-success text-white">
                🔔 Últimas Transacciones
            </div>
            <div class="card-body">
                <table class="table table-bordered table-sm-6">
                    <thead class="table-light">
                        <tr>
                            <th>Fecha</th>
                            <th>Descripción</th>
                            <th>Monto</th>
                            <th>Estado</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Enlaces adicionales -->
<div class="footer-links">

    <a asp-page="/Clientespages/AgregarCuenta" class="btn btn-outline-primary me-2">➕ Agregar Cuenta</a>
    <a asp-page="/ClientesPages/TransaccionesCliente" class="btn btn-outline-secondary me-2">📄 Todas las Transacciones</a>
    <a asp-page="/ClientesPages/Bancos" class="btn btn-outline-secondary me-2">🏦 Bancos Registrados</a>
    <a asp-page="/Clientespages/PromocionesActivas" class="btn btn-outline-secondary me-2">🔖 Promociones Activas</a>
    <a asp-page="/ClientesPages/Comercios" class="btn btn-outline-secondary me-2">🛍️ Comercios Registrados</a>

</div>
