@page
@using Microsoft.AspNetCore.Authorization
@model WebApp.Pages.ClientesPages.BancosModel
@section Scripts {
    <script>
        var userToken = '@HttpContext.Request.Cookies["jwt_token"]';
    </script>
    <script src="~/js/pages/Bancos.js"></script>
}
@attribute [Authorize(Roles = "Cliente")]
<div class="text-end">
    <a asp-page="/ClientesPages/ClienteHome" class="btn btn-outline-dark">⬅️Volver</a>
</div>
<h2>Bancos Registrados</h2>
<div class="row">
    <div class="col-sm-12">
        <div class="card">
            <div class="card-header bg-success text-white">
                🏦 Instituciones Bancarias Registradas
            </div>
            <div class="card-body">
                <table id="tblinstitucionBancaria" class="table table-bordered table-striped table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Código Identidad</th>
                            <th>Cédula Jurídica</th>
                            <th>Dirección</th>
                            <th>telefono</th>
                            <th>Correo Electrónico</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>


